{
  "name": "resend-local",
  "version": "0.0.5",
  "type": "module",
  "files": [
    "dist"
  ],
  "bin": "./dist/starter.js",
  "description": "A local emulator for Resend API.",
  "author": {
    "name": "y-hiraoka",
    "url": "https://github.com/y-hiraoka"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/y-hiraoka/resend-local"
  },
  "keywords": [
    "resend"
  ],
  "scripts": {
    "dev": "next dev --turbopack --port 8005",
    "build": "tsx build.ts",
    "start": "next start",
    "lint": "next lint",
    "drizzle:push": "drizzle-kit push --dialect sqlite --schema src/server/database/schema.ts --url file:resend-local.sqlite",
    "refetch-resend-openapi": "curl -o ./resend-openapi.yaml https://raw.githubusercontent.com/resend/resend-openapi/main/resend.yaml",
    "generate-resend-hono": "hono-takibi ./resend-openapi.yaml -o ./src/server/resend-routes.ts",
    "requests": "RESEND_BASE_URL=http://localhost:8005 pnpm tsx",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "changeset:publish": "pnpm run build && pnpm exec changeset publish"
  },
  "dependencies": {
    "@libsql/client": "0.15.14",
    "commander": "14.0.0",
    "drizzle-orm": "0.44.5",
    "next": "15.5.2",
    "prettier": "3.6.2",
    "react": "19.1.1",
    "shiki": "3.12.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.6",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.34.0",
    "@hono/zod-openapi": "1.1.0",
    "@hono/zod-validator": "0.7.2",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-label": "2.1.7",
    "@radix-ui/react-separator": "1.1.7",
    "@radix-ui/react-slot": "1.2.3",
    "@radix-ui/react-tabs": "1.1.13",
    "@radix-ui/react-tooltip": "1.2.8",
    "@react-email/components": "0.5.1",
    "@tailwindcss/postcss": "4.1.12",
    "@tanstack/react-query": "5.85.6",
    "@types/fs-extra": "11.0.4",
    "@types/mime-types": "3.0.1",
    "@types/node": "24.3.0",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@types/validator": "13.15.2",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "drizzle-kit": "0.31.4",
    "esbuild": "0.25.9",
    "eslint": "9.34.0",
    "eslint-config-next": "15.5.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-unused-imports": "4.2.0",
    "fs-extra": "11.3.1",
    "globals": "16.3.0",
    "hono": "4.9.5",
    "hono-takibi": "0.9.25",
    "linkify-react": "4.3.2",
    "linkifyjs": "4.3.2",
    "lucide-react": "0.542.0",
    "mime-types": "3.0.1",
    "next-themes": "0.4.6",
    "react-dom": "19.1.1",
    "react-icons": "5.5.0",
    "resend": "6.0.2",
    "sonner": "2.0.7",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "4.1.12",
    "tsx": "4.20.5",
    "tw-animate-css": "1.3.7",
    "typescript": "5.9.2",
    "typescript-eslint": "8.41.0",
    "validator": "13.15.15",
    "zod": "4.1.5"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
