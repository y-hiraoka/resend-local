{
  "name": "resend-local",
  "version": "0.0.3",
  "type": "module",
  "files": [
    "dist"
  ],
  "bin": "./dist/starter.js",
  "description": "A local emulator for Resend API.",
  "author": {
    "name": "y-hiraoka",
    "url": "https://github.com/y-hiraoka"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/y-hiraoka/resend-local"
  },
  "keywords": [
    "resend"
  ],
  "scripts": {
    "dev": "next dev --turbopack --port 8005",
    "build": "tsx build.ts",
    "start": "next start",
    "lint": "next lint",
    "drizzle:push": "drizzle-kit push --dialect sqlite --schema src/server/database/schema.ts --url file:resend-local.sqlite",
    "refetch-resend-openapi": "curl -o ./resend-openapi.yaml https://raw.githubusercontent.com/resend/resend-openapi/main/resend.yaml",
    "generate-resend-hono": "hono-takibi ./resend-openapi.yaml -o ./src/server/resend-routes.ts",
    "requests": "RESEND_BASE_URL=http://localhost:8005 pnpm tsx",
    "changeset:version": "changeset version && pnpm install --lockfile-only",
    "changeset:publish": "pnpm run build && pnpm exec changeset publish"
  },
  "dependencies": {
    "@libsql/client": "^0.15.7",
    "commander": "^14.0.0",
    "drizzle-orm": "^0.44.0",
    "next": "^15.3.2",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "shiki": "^3.4.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@eslint/eslintrc": "^3",
    "@eslint/js": "^9.26.0",
    "@hono/zod-openapi": "^0.19.6",
    "@hono/zod-validator": "^0.5.0",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.6",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-tabs": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.6",
    "@react-email/components": "^0.0.41",
    "@tailwindcss/postcss": "^4",
    "@tanstack/react-query": "^5.75.7",
    "@types/fs-extra": "^11.0.4",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^20",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@types/validator": "^13.15.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-kit": "^0.31.1",
    "esbuild": "^0.25.4",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "fs-extra": "^11.3.0",
    "globals": "^16.1.0",
    "hono": "^4.7.8",
    "hono-takibi": "^0.6.8",
    "linkify-react": "^4.3.1",
    "linkifyjs": "^4.3.1",
    "lucide-react": "^0.507.0",
    "mime-types": "^3.0.1",
    "next-themes": "^0.4.6",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "resend": "^4.5.1",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4",
    "tsx": "^4.19.4",
    "tw-animate-css": "^1.2.9",
    "typescript": "^5",
    "typescript-eslint": "^8.32.1",
    "validator": "^13.15.15",
    "zod": "^3.24.4"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
